<%= form_for(@newPost) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_field :content, autofocus: true %>
  </div>


  <div class="actions">
    <%= f.submit "Post" %>
    </div>
  <% end %>
