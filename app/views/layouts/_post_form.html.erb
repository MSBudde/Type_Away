<h1 class="titlez"> New Post </h1>

<%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, :class => 'forms' %>
  </div>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :cols => 40, :rows => 10, :class => 'forms' %>
  </div>


  <div class="actions">
    <%= f.submit "Post" %>
    </div>
  <% end %>
