<div class="container" >
  <div class="contain1" >
    <h1 class="postTitle"><%= @post.title%></h1>
  <div class="contain1">
    <p><%= @post.content%></p>
  </div>
</div>
</br>
    <div class="contain2">
      <h2 class="postTitle">Comments</h2>
        <% @post.comments.each do |c| %>
          <% if current_user %>
          <% if c.user == current_user %>
          <div class="commentbox">
          <p class="usernameC">@<%= c.user.username%></p>
          <p class="timeC"><%= c.created_at %></p></br>
          <%= c.content %>
          <%= link_to "Delete", post_comment_path(@post, c), method: :delete, data: { confirm: "Are you sure you want to delete this?"} %>
        </div>
          <% end %>
          <% end %>
        <% end %>
        <%= link_to "Comment", new_post_comment_path(@post) %>

      </div> <br>
      </div>

    <% if current_user %>
      <% if @post.user == current_user %>
        <p class="text-right">
          <%= link_to "Delete this post", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
        </p>
      <% end %>
    <% end %>


</div>
</div>
